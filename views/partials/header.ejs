<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO"
        crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="/stylesheets/app.css">
    <title>Hallspot: A web app to secure halls for your parties and conferences</title>
</head>

<body>
    <nav class="navbar navbar-default  navbar-dark bg-dark navbar-expand-md">
        <div class="container">       
        <div class=" navbar-header ">
            <a href="/halls" class=" navbar-brand ">Hallspot</a>
        </div>
        
        <div class="float-right collapse navbar-collapse" id="collapsibleNavbar">
            <ul class="navbar-nav">
                <li>
                    <a class="nav-link text-light" href="/">Home</a>
                </li>
            </ul>
            <ul class="ml-auto navbar-nav">
                <% if (!currentUser) { %>
                    <li class="nav-item">
                        <a class="text-light nav-link" href="/login">Login</a>
                    </li>
                    <li class="nav-item">
                        <a class="text-light nav-link" href="/register">Signup</a>
                    </li>
                <% } else { %>
                    
                    <li class="nav-item">
                        <a href="/users/<%=currentUser._id%>" class="text-light nav-link">Signed in as <%= currentUser.username%> </a>
                    </li>
                    <li class="nav-item ">
                        <div class="avatar-sm">
                            <img src="<%=currentUser.avatar%>" alt="..." class="avatar-img avatar rounded-circle  profile-pic">
                        </div>
                    </li>
                    <li class="nav-item">
                        <a class="text-light nav-link" href="/logout">Logout</a>
                    </li>
                    
                <% } %>

            </ul>
        </div>
        <button class="navbar-toggler btn btn-dark" type="button" data-toggle="collapse" data-target="#collapsibleNavbar">
            <span class="navbar-toggler-icon"></span>
        </button>
        </div>
    </nav>

    <div class="container" id="flash-message">
        <% if(error && error.length > 0) { %>
        <div class="alert alert-danger">
            <p>
                <%=error %>
            </p>
        </div>
        <% } %>
    
        <% if(success && success.length > 0) { %>
        <div class="alert alert-success">
            <p>
                <%= success %>
            </p>
        </div>
        <% } %>
    </div>
    
    <div class="container">

